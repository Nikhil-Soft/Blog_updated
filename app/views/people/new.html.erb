<h1>New Email</h1>

<% if @person.errors.any? %>
	<div id="errors_explaination">
		<h2><%= pluralize(@person.errors.count, "Count") %>
			prohibited persons from being saved:
		</h2>
		<ul>
			<% @person.errors.full_messages.each do |error| %>
				<li>
					<%= error %>
				</li>	
			<%end%>
		</ul>
	</div>
<%end%>

<%= form_with model: @person do |form| %>
	<p>
		<%= form.label :name %>
		<%= form.text_field :name %>
	</p>
	<p>
		<%= form.label :email %>
		<%= form.text_field :email %>
	</p>
	<p>
		<%= form.label :confirmation %>
		<%= form.check_box :confirmation %>
	</p>

	<p>
		<%= form.label :Start_Date %>
		<%= form.date_field :start_date %>
	</p>

	<p>
		<%= form.label :End_date %>
		<%= form.date_field :end_date %>
	</p>
	
	<p>
		<%= form.label :Subdomain %>
		<%= form.text_field :subdomain %>
	</p>

	<p>
		<%= form.label :Message %>
		<%= form.text_field :message %>
	</p>

	<p>
		<%= form.label :Password %>
		<%= form.text_field :password %>
	</p>

	<p>
		<%= form.label :Registration_Number %>
		<%= form.text_field :registration_number %>
	</p>

	<p>
		<%= form.label :Bio %>
		<%= form.text_field :bio %>
	</p>


	<p><%= form.submit %></p>
<%end%>

<p><%= link_to 'Back', people_path %></p>

<h1>Show Product</h1>
<p>
	<strong>Name: </strong> <%= @product.name %>
</p>

 <ul class="name-img">
	<% @picture.each do |picture| %>
		<li>
			<% if picture.image.present? %>
				<%= image_tag picture.image, size: '100x100', style:"object-fit:cover" %>
			<%else%>
				<%= image_tag '/assets/Defaultf.jpeg', size: '100x100', style: "border: 6px solid yellowgreen"%>
			<%end%>
			<div><small><b>Name:</b></small> <%= picture.name %></div>
		</li>
	<% end %>
</ul> 
<br>
<hr>


<%=render partial: "pictures/form", locals: {product: @product}%>
<br>

<div><%= link_to 'Back', products_path, style: 'background-color: teal; padding: 6px 8px;border-radius: 6px; border: 1px solid #f00; color: #fff;text-transform:uppercase;text-decoration:none' %></div>
<hr>

<style type="text/css">
	.name-img{
		padding: 0;
		margin: 0;
		display: grid;
		grid-template-columns: repeat(8, 1fr);
		grid-gap: 10px;
	}
	.name-img li {
		display: block;
		text-align: left;
		border:  1px solid #666;
		padding: 6px;
	}
</style>
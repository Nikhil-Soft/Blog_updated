<h1>New User</h1>

<% if @demo.errors.any? %>
	<div id="errors_explaination">
		<h2><%= pluralize(@demo.errors.count, "Count") %>
			prohibited persons from being saved:
		</h2>
		<ul>
			<% @demo.errors.full_messages.each do |error| %>
				<li>
					<%= error %>
				</li>	
			<%end%>
		</ul>
	</div>
<%end%>

<%= form_with model: @demo do |form| %>
	<p>
		<%= form.label :Name %>
		<%= form.text_field :name %>
	</p>

	<p>
		<%= form.label :User_name %>
		<%= form.text_field :user_name %>
	</p>

	<p>
		<%= form.label :Role %>
		<%= form.select :role, ["user", "admin", "jury"] %>
	</p>

	<p>
		<%= form.label :email %>
		<%= form.text_field :email %>
	</p>
	
	<p>
		<%= form.label :Password %>
		<%= form.text_field :password %>
	</p>

	<p>
		<%= form.label :Password_confirmation %>
		<%= form.text_field :password_confirmation %>
	</p>

	<p>
		<%= form.label :Age %>
		<%= form.text_field :age %>
	</p>


	<p><%= form.submit %></p>
<%end%>

<p><%= link_to 'Back', demos_path %></p>